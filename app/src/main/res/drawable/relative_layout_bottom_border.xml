<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:drawable="@color/colorGray"/>
    <item android:state_pressed="true" android:state_enabled="false" android:drawable="@color/colorGray" />
    <item android:drawable="@color/colorGray"/>
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGray" />
            <solid android:color="@color/colorGray" />
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorWhite" />
            <solid android:color="@color/colorWhite" />

        </shape>
    </item>
</layer-list>


